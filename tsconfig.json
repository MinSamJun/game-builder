{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@infrastructure/*": ["infrastructure/*"],
      "@components/*": ["components/*"],
      "@container/*": ["container/*"],
      "@data/*": ["data/*"],
      "@hook/*": ["hook/*"],
      "@utils/*": ["utils/*"],
      "@i18n/*": ["infrastructure/i18n/*"],
      "@types/*": ["types/*"],
      "@config/*": ["config/*"],
      "@mh-common/*": ["container/mh-common/*"],
      "@mh-wilds/*": ["container/mh-wilds/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
